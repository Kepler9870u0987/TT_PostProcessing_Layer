# ===================================
# Post-Processing & Enrichment Layer
# Environment Configuration
# ===================================

# LLM API
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=openai/gpt-4o

# Database
DATABASE_URL=postgresql://triage:triage_password@localhost:5432/triage_db

# CRM Integration
CRM_API_URL=http://localhost:8081/api/v1
CRM_API_TIMEOUT_MS=500

# Redis (cache + job queue)
REDIS_URL=redis://localhost:6379/0

# spaCy model
SPACY_MODEL=it_core_news_lg

# KeyBERT embedding model
EMBEDDING_MODEL=paraphrase-multilingual-mpnet-base-v2

# Pipeline settings
MAX_LLM_RETRIES=3
LLM_TEMPERATURE=0.1
EVIDENCE_FAILURE_THRESHOLD=0.3
LOG_LEVEL=INFO

# Privacy
PII_REDACTION_ENABLED=true
MAX_BODY_LOG_CHARS=500
